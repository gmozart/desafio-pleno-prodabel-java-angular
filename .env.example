# ============================================
# CONFIGURAÇÕES DO PROJETO
# ============================================
# Copie este arquivo para .env e ajuste os valores conforme necessário
# cp .env.example .env

# ============================================
# SPRING BOOT
# ============================================
SPRING_PROFILE=prod
BACKEND_PORT=8080

# Opções da JVM
JAVA_OPTS=-Xmx512m -Xms256m

# ============================================
# BANCO DE DADOS POSTGRESQL
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=gestao_atendimentos
DB_USER=postgres
DB_PASSWORD=postgres

# ============================================
# JPA / HIBERNATE
# ============================================
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# ============================================
# PGADMIN (OPCIONAL - AMBIENTE DE DESENVOLVIMENTO)
# ============================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=8081

# ============================================
# DOCKER COMPOSE
# ============================================
COMPOSE_PROJECT_NAME=desafio-prodabel
